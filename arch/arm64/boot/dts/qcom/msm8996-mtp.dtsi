#include "msm8996.dtsi"

/ {
	aliases {
		serial0 = &blsp2_uart1;
	};

	chosen {
		stdout-path = "serial0";
	};

	soc {
		serial@75b0000 {
			status = "okay";
		};

		mdss@900000 {
			status = "okay";

			mdp@901000 {
				status = "okay";
			};

			dsi@994000 {
				status = "okay";

				qcom,dual-dsi-mode;
				qcom,master-dsi;
				qcom,sync-dual-dsi;

				panel@0 {
					compatible = "lg,ld070wx3-sl01";
					reg = <0>;

					port {
						panel0_in: endpoint {
							remote-endpoint = <&dsi0_out>;
						};
					};
				};

				ports {
					port@1 {
						endpoint {
							remote-endpoint = <&panel0_in>;
							data-lanes = <0 1 2 3>;
						};
					};
				};
			};

			dsi-phy@994400 {
				status = "okay";
			};

			dsi@996000 {
				status = "okay";

				panel@0 {
					compatible = "lg,ld070wx3-sl01";
					reg = <0>;

					port {
						panel1_in: endpoint {
							remote-endpoint = <&dsi1_out>;
						};
					};
				};

				ports {
					port@1 {
						endpoint {
							remote-endpoint = <&panel1_in>;
							data-lanes = <0 1 2 3>;
						};
					};
				};
			};

			dsi-phy@996400 {
				status = "okay";
			};
		};
	};
};
